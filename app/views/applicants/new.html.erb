<% content_for(:title_tag) do %>
  Join us
<% end %>

<div class="container">
  <div class="col-sx-12 col-sm-12">
  <%= render 'open_application' %>
    <div class="form">
      <%= simple_form_for (@applicant) do |f| %>
        <%= f.input :email_address, error: 'Username is mandatory, please specify one' %>
        <%= f.label "In short, what is your motivation to join ActionDesk (English or French)?" %>
        <%= f.input :motivation, label: false %>
        <%= f.input :linkedin_url %>
        <%= f.input :github_url %>
        <%= f.submit "Apply", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
