<% content_for(:title_tag) do %>
  Welcome
<% end %>
<!-- Transparent navbar for home -->
<% content_for(:navbar_class, "navbar-home") %>

<div class="banner" style= "background-image: linear-gradient(-225deg, rgba(0,78,55,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= image_path('actiondeskhomepage') %>')">

  <div class="banner-content" id="home-banner">
